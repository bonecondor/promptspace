# Get your API key from console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Set to true to disable all LLM generation (kill switch)
DISABLE_GENERATION=false

# Server port
PORT=3000

# Origin allowed for generation endpoints (e.g. https://promptspace.fly.dev)
# Leave blank for local development
ALLOWED_ORIGIN=

# Max generations per day (resets at midnight server time). Default: 2000 (~$2/day)
DAILY_GENERATION_CAP=2000
